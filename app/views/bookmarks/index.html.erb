<p id="notice"><%= notice %></p>

<h2 class="text-center">Marcadores</h2>
<br>
  <%= render "form", bookmark: @bookmark %>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Título</th>
      <th scope="col">URL</th>
      <th scope="col">Categoría</th>
      <th scope="col">Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <%= render "bookmark", bookmark: bookmark %>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-warning text-dark"><%= link_to 'Nuevo Marcador', new_bookmark_path %></button>

<div id="bookmark-content"></div>